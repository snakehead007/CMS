@model LoginViewModel
@section section{ 
    <div class="ui middle aligned center aligned grid">
        <div class="column">
            <h2 class="ui teal image header">
                <div class="content">
                    Content Management System - Log in
                </div>
            </h2>
            <form class="ui large form" method="post" asp-controller="Auth" asp-action="Login">
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input asp-for="Username" type="text" placeholder="Username">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input asp-for="Password" type="password" placeholder="Password">
                        </div>
                    </div>
                    <button class="ui fluid large teal submit button" type="submit">Login</button>
                </div>
            </form>

            <div class="ui message">
                Don't have an account?  <a href="@Url.Action("Register", "Auth")">Sign up.</a>
            </div>
        </div>
    </div>
}
@section Styles{ 
    <link href="/css/login.css" rel="stylesheet" />
}